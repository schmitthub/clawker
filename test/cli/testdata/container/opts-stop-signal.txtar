# Test stop signal flag (--stop-signal)
# Verifies: Custom stop signal is set on container

# Register cleanup
defer clawker container rm --force --agent stopsig-$RANDOM_STRING

# Create container with custom stop signal
exec clawker container create --agent stopsig-$RANDOM_STRING --stop-signal SIGKILL alpine:latest sleep 3600

# Verify stop signal via inspect
exec clawker container inspect --format '{{.Config.StopSignal}}' --agent stopsig-$RANDOM_STRING
stdout 'SIGKILL'

-- clawker.yaml --
version: "1"

build:
  image: "alpine:latest"

security:
  firewall:
    enable: false
