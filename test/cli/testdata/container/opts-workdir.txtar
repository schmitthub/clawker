# Test working directory flag (-w/--workdir)
# Verifies: Container starts in specified working directory

# Test -w shorthand
exec clawker container run --rm -w /tmp alpine:latest pwd
stdout '/tmp'

# Test --workdir long form
exec clawker container run --rm --workdir /var alpine:latest pwd
stdout '/var'

-- clawker.yaml --
version: "1"

build:
  image: "alpine:latest"

security:
  firewall:
    enable: false
