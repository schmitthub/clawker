services:
  otel-collector:
    container_name: otel-collector
    image: otel/opentelemetry-collector-contrib:latest
    command: ["--config=/etc/otel-collector-config.yaml"]
    volumes:
      - ./otel-config.yaml:/etc/otel-collector-config.yaml
    ports:
      - "{{.OtelGRPCPort}}:{{.OtelGRPCPort}}" # OTLP gRPC receiver
      - "{{.OtelCollectorPort}}:{{.OtelCollectorPort}}" # OTLP HTTP receiver
    extra_hosts:
      - "host.docker.internal:host-gateway"
    labels:
      dev.clawker.managed: "true"
      dev.clawker.monitoring: "true"
    networks:
      - clawker-net

  jaeger:
    container_name: jaeger
    image: jaegertracing/all-in-one:latest
    ports:
      - "{{.JaegerPort}}:{{.JaegerPort}}" # UI
      - "{{.OtelGRPCPort}}"        # OTLP gRPC internal
    environment:
      - COLLECTOR_OTLP_ENABLED=true
    labels:
      dev.clawker.managed: "true"
      dev.clawker.monitoring: "true"
    networks:
      - clawker-net

  prometheus:
    container_name: prometheus
    image: prom/prometheus:latest
    command:
      - "--config.file=/etc/prometheus/prometheus.yml"
      - "--web.enable-remote-write-receiver"
    ports:
      - "{{.PrometheusPort}}:{{.PrometheusPort}}"
    volumes:
      - ./prometheus.yaml:/etc/prometheus/prometheus.yml
    labels:
      dev.clawker.managed: "true"
      dev.clawker.monitoring: "true"
    networks:
      - clawker-net

  loki:
    container_name: loki
    image: grafana/loki:latest
    ports:
      - "{{.LokiPort}}:{{.LokiPort}}"
    command: -config.file=/etc/loki/local-config.yaml
    labels:
      dev.clawker.managed: "true"
      dev.clawker.monitoring: "true"
    networks:
      - clawker-net

  grafana:
    container_name: grafana
    image: grafana/grafana:latest
    ports:
      - "{{.GrafanaPort}}:{{.GrafanaPort}}"
    environment:
      # Enable anonymous access so users don't need to login locally
      - GF_AUTH_ANONYMOUS_ENABLED=true
      - GF_AUTH_ANONYMOUS_ORG_ROLE=Admin
      # Set the home dashboard so Grafana loads it on startup
      - GF_DASHBOARDS_DEFAULT_HOME_DASHBOARD_PATH=/etc/grafana/provisioning/dashboards/claude-code.json
    volumes:
      # Auto-provision datasources and dashboards
      - ./grafana-datasources.yaml:/etc/grafana/provisioning/datasources/datasources.yaml
      - ./grafana-dashboards.yaml:/etc/grafana/provisioning/dashboards/dashboards.yaml
      - ./grafana-dashboard.json:/etc/grafana/provisioning/dashboards/claude-code.json
      - ./grafana-cp-dashboard.json:/etc/grafana/provisioning/dashboards/clawker-controlplane.json
    extra_hosts:
      - "host.docker.internal:host-gateway"
    labels:
      dev.clawker.managed: "true"
      dev.clawker.monitoring: "true"
    networks:
      - clawker-net

networks:
  clawker-net:
    external: true  # Created by clawker start/run, shared by all clawker services
