# Test label flag (-l/--label)
# Verifies: User labels are applied to container

# Substitute project name in config
replace clawker.yaml PROJECT=$PROJECT

# Create settings directory
mkdir $HOME/.local/clawker

# Register cleanup
defer clawker container rm --force --agent labels-$RANDOM_STRING

# Create container with custom labels
exec clawker container create --agent labels-$RANDOM_STRING -l mykey=myvalue -l another=label alpine:latest sleep 3600

# Verify labels via inspect
exec clawker container inspect --format '{{index .Config.Labels "mykey"}}' --agent labels-$RANDOM_STRING
stdout 'myvalue'

exec clawker container inspect --format '{{index .Config.Labels "another"}}' --agent labels-$RANDOM_STRING
stdout 'label'

# Verify clawker managed labels are still present (precedence)
exec clawker container inspect --format '{{index .Config.Labels "com.clawker.managed"}}' --agent labels-$RANDOM_STRING
stdout 'true'

-- clawker.yaml --
version: "1"
project: "$PROJECT"

build:
  image: "alpine:latest"

security:
  firewall:
    enable: false
