# Test container kill command
# Verifies: container can be killed (forceful stop)

# Substitute project name in config
replace clawker.yaml PROJECT=$PROJECT

# Create settings directory
mkdir $HOME/.local/clawker

# Register cleanup
defer clawker container rm --force --agent kill-$RANDOM_STRING

# Start a container
exec clawker container run --detach --agent kill-$RANDOM_STRING alpine:latest sleep 3600
wait_container_running clawker.$PROJECT.kill-$RANDOM_STRING 30

# Kill the container
exec clawker container kill --agent kill-$RANDOM_STRING

# Verify container is not running
sleep 1
exec clawker container ls
! stdout 'kill-'$RANDOM_STRING

-- clawker.yaml --
version: "1"
project: "$PROJECT"

build:
  image: "alpine:latest"

security:
  firewall:
    enable: false
