# Test network and MAC address flags (--network, --mac-address)
# Verifies: Network mode and MAC address are set correctly

# Substitute project name in config
replace clawker.yaml PROJECT=$PROJECT

# Create settings directory
mkdir $HOME/.local/clawker

# Register cleanup
defer clawker container rm --force --agent netcfg-$RANDOM_STRING
defer clawker container rm --force --agent netmac-$RANDOM_STRING

# Create container with bridge network
exec clawker container create --agent netcfg-$RANDOM_STRING --network bridge alpine:latest sleep 3600

# Verify network mode via inspect
exec clawker container inspect --format '{{.HostConfig.NetworkMode}}' --agent netcfg-$RANDOM_STRING
stdout 'bridge'

# Create container with MAC address
exec clawker container create --agent netmac-$RANDOM_STRING --mac-address 02:42:ac:11:00:02 alpine:latest sleep 3600

# Verify MAC address via inspect (check NetworkSettings)
exec clawker container inspect --format '{{json .NetworkSettings}}' --agent netmac-$RANDOM_STRING
stdout '02:42:ac:11:00:02'

-- clawker.yaml --
version: "1"
project: "$PROJECT"

build:
  image: "alpine:latest"

security:
  firewall:
    enable: false
