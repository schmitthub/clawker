# Test container list with format flag
# Verifies: custom format output works

# Substitute project name in config
replace clawker.yaml PROJECT=$PROJECT

# Create settings directory
mkdir $HOME/.local/clawker

# Register cleanup
defer clawker container rm --force --agent fmt-$RANDOM_STRING
defer clawker container stop --agent fmt-$RANDOM_STRING

# Start a container
exec clawker container run --detach --agent fmt-$RANDOM_STRING alpine:latest sleep 3600
wait_container_running clawker.$PROJECT.fmt-$RANDOM_STRING 30

# List with name format only
exec clawker container ls --format '{{.Name}}'
stdout 'clawker.'$PROJECT'.fmt-'$RANDOM_STRING

# List with status format
exec clawker container ls --format '{{.Status}}'
stdout 'running'

-- clawker.yaml --
version: "1"
project: "$PROJECT"

build:
  image: "alpine:latest"

security:
  firewall:
    enable: false
