# Test device passthrough flags
# Verifies: --device and --device-cgroup-rule flags are accepted

# Substitute project name in config
replace clawker.yaml PROJECT=$PROJECT

# Create settings directory
mkdir $HOME/.local/clawker

# Test --device flag - map /dev/null into container
exec clawker container run --rm --device /dev/null:/dev/mynull alpine:latest test -e /dev/mynull

# Test --device-cgroup-rule flag via create + inspect
defer clawker container rm --force --agent dcg-$RANDOM_STRING
exec clawker container create --agent dcg-$RANDOM_STRING --device-cgroup-rule 'c 1:3 mr' alpine:latest sleep 3600
exec clawker container inspect --format '{{index .HostConfig.DeviceCgroupRules 0}}' --agent dcg-$RANDOM_STRING
stdout 'c 1:3 mr'

-- clawker.yaml --
version: "1"
project: "$PROJECT"

build:
  image: "alpine:latest"

security:
  firewall:
    enable: false
