# Test file-based env and label flags (--env-file, --label-file)
# Verifies: Environment variables and labels can be loaded from files

# Substitute project name in config
replace clawker.yaml PROJECT=$PROJECT

# Create settings directory
mkdir $HOME/.local/clawker

# Test --env-file flag with empty file (should succeed with no env vars)
exec clawker container run --rm --env-file env.txt alpine:latest printenv MY_FILE_VAR
stdout 'from-file'

# Test --label-file flag
defer clawker container rm --force --agent lf-$RANDOM_STRING
exec clawker container create --agent lf-$RANDOM_STRING --label-file labels.txt alpine:latest sleep 3600
exec clawker container inspect --format '{{index .Config.Labels "custom.test"}}' --agent lf-$RANDOM_STRING
stdout 'labelvalue'

-- clawker.yaml --
version: "1"
project: "$PROJECT"

build:
  image: "alpine:latest"

security:
  firewall:
    enable: false

-- env.txt --
MY_FILE_VAR=from-file

-- labels.txt --
custom.test=labelvalue
