# Test read-only root filesystem flag (--read-only)
# Verifies: Container root filesystem is read-only

# Register cleanup
defer clawker container rm --force --agent readonly-$RANDOM_STRING

# Create container with read-only root
exec clawker container create --agent readonly-$RANDOM_STRING --read-only alpine:latest sleep 3600

# Verify read-only via inspect
exec clawker container inspect --format '{{.HostConfig.ReadonlyRootfs}}' --agent readonly-$RANDOM_STRING
stdout 'true'

-- clawker.yaml --
version: "1"

build:
  image: "alpine:latest"

security:
  firewall:
    enable: false
