# Test advanced networking flags
# Verifies: --dns-option, --domainname, --expose, --publish-all flags work

# Substitute project name in config
replace clawker.yaml PROJECT=$PROJECT

# Create settings directory
mkdir $HOME/.local/clawker

# Test --dns-option flag
exec clawker container run --rm --dns-option ndots:5 alpine:latest cat /etc/resolv.conf
stdout 'ndots:5'

# Test --domainname flag via create + inspect
defer clawker container rm --force --agent dom-$RANDOM_STRING
exec clawker container create --agent dom-$RANDOM_STRING --domainname example.com alpine:latest sleep 3600
exec clawker container inspect --format '{{.Config.Domainname}}' --agent dom-$RANDOM_STRING
stdout 'example.com'

# Test --expose flag via create + inspect
defer clawker container rm --force --agent exp-$RANDOM_STRING
exec clawker container create --agent exp-$RANDOM_STRING --expose 8080 alpine:latest sleep 3600
exec clawker container inspect --format '{{json .Config.ExposedPorts}}' --agent exp-$RANDOM_STRING
stdout '8080'

-- clawker.yaml --
version: "1"
project: "$PROJECT"

build:
  image: "alpine:latest"

security:
  firewall:
    enable: false
