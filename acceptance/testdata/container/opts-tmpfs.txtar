# Test tmpfs mount flag (--tmpfs)
# Verifies: Tmpfs filesystem is mounted in container

# Substitute project name in config
replace clawker.yaml PROJECT=$PROJECT

# Create settings directory
mkdir $HOME/.local/clawker

# Register cleanup
defer clawker container rm --force --agent tmpfs-$RANDOM_STRING

# Create container with tmpfs mount
exec clawker container create --agent tmpfs-$RANDOM_STRING --tmpfs /mytmp:rw,size=64m alpine:latest sleep 3600

# Verify tmpfs via inspect
exec clawker container inspect --format '{{json .HostConfig.Tmpfs}}' --agent tmpfs-$RANDOM_STRING
stdout '/mytmp'

-- clawker.yaml --
version: "1"
project: "$PROJECT"

build:
  image: "alpine:latest"

security:
  firewall:
    enable: false
