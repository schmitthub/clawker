# Test logging driver flags
# Verifies: --log-driver and --log-opt flags are supported

# Substitute project name in config
replace clawker.yaml PROJECT=$PROJECT

# Create settings directory
mkdir $HOME/.local/clawker

# Test --log-driver flag via run
exec clawker container run --rm --log-driver json-file alpine:latest echo logdriver-test
stdout 'logdriver-test'

# Test --log-driver with --log-opt via create + inspect
defer clawker container rm --force --agent log-$RANDOM_STRING
exec clawker container create --agent log-$RANDOM_STRING --log-driver json-file --log-opt max-size=10m alpine:latest sleep 3600
exec clawker container inspect --format '{{.HostConfig.LogConfig.Type}}' --agent log-$RANDOM_STRING
stdout 'json-file'

-- clawker.yaml --
version: "1"
project: "$PROJECT"

build:
  image: "alpine:latest"

security:
  firewall:
    enable: false
