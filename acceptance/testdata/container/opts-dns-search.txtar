# Test DNS search flag (--dns-search)
# Verifies: DNS search domains are configured in the container

# Substitute project name in config
replace clawker.yaml PROJECT=$PROJECT

# Create settings directory
mkdir $HOME/.local/clawker

# Test via /etc/resolv.conf
exec clawker container run --rm --dns-search example.com alpine:latest cat /etc/resolv.conf
stdout 'example.com'

# Test via inspect
defer clawker container rm --force --agent dnss-$RANDOM_STRING
exec clawker container create --agent dnss-$RANDOM_STRING --dns-search test.local alpine:latest sleep 3600
exec clawker container inspect --format '{{json .HostConfig.DNSSearch}}' --agent dnss-$RANDOM_STRING
stdout 'test.local'

-- clawker.yaml --
version: "1"
project: "$PROJECT"

build:
  image: "alpine:latest"

security:
  firewall:
    enable: false
