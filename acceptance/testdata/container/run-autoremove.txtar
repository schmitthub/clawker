# Test --rm flag for automatic container removal
# Verifies: container is removed after exit

# Run container with --rm that exits immediately
exec clawker container run --rm --agent rm-test-$RANDOM_STRING alpine:latest echo done
stdout 'done'

# Container should not appear in list after exit (with small delay)
sleep 2
exec clawker container ls -a
! stdout 'rm-test-'$RANDOM_STRING

-- clawker.yaml --
version: "1"

build:
  image: "alpine:latest"

security:
  firewall:
    enable: false
