# Test extra hosts flag (--add-host)
# Verifies: Custom host-to-IP mappings are added to /etc/hosts

# Substitute project name in config
replace clawker.yaml PROJECT=$PROJECT

# Create settings directory
mkdir $HOME/.local/clawker

# Test via cat /etc/hosts
exec clawker container run --rm --add-host myservice:192.168.1.100 alpine:latest cat /etc/hosts
stdout 'myservice'
stdout '192.168.1.100'

# Test via inspect
defer clawker container rm --force --agent addhost-$RANDOM_STRING
exec clawker container create --agent addhost-$RANDOM_STRING --add-host db:10.0.0.5 alpine:latest sleep 3600
exec clawker container inspect --format '{{.HostConfig.ExtraHosts}}' --agent addhost-$RANDOM_STRING
stdout 'db:10.0.0.5'

-- clawker.yaml --
version: "1"
project: "$PROJECT"

build:
  image: "alpine:latest"

security:
  firewall:
    enable: false
