# Test storage option flag (--storage-opt)
# Verifies: Storage driver options are set on the container

# Substitute project name in config
replace clawker.yaml PROJECT=$PROJECT

# Create settings directory
mkdir $HOME/.local/clawker

# Register cleanup
defer clawker container rm --force --agent stopt-$RANDOM_STRING

# Create container with storage option
exec clawker container create --agent stopt-$RANDOM_STRING --storage-opt size=10G alpine:latest sleep 3600

# Verify storage option via inspect
exec clawker container inspect --format '{{json .HostConfig.StorageOpt}}' --agent stopt-$RANDOM_STRING
stdout 'size'

-- clawker.yaml --
version: "1"
project: "$PROJECT"

build:
  image: "alpine:latest"

security:
  firewall:
    enable: false
