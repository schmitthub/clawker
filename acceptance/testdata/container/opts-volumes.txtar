# Test volume flag (--volume / -v)
# Verifies: Bind mounts are created and accessible

# Substitute project name in config
replace clawker.yaml PROJECT=$PROJECT

# Create settings directory
mkdir $HOME/.local/clawker

# Test bind mount via run (mount /tmp read-only)
exec clawker container run --rm -v /tmp:/mnt/hosttemp:ro alpine:latest ls /mnt/hosttemp

# Test via inspect
defer clawker container rm --force --agent vol-$RANDOM_STRING
exec clawker container create --agent vol-$RANDOM_STRING -v /tmp:/container-tmp alpine:latest sleep 3600

# Verify bind mount via inspect
exec clawker container inspect --format '{{json .HostConfig.Binds}}' --agent vol-$RANDOM_STRING
stdout '/tmp:/container-tmp'

-- clawker.yaml --
version: "1"
project: "$PROJECT"

build:
  image: "alpine:latest"

security:
  firewall:
    enable: false
