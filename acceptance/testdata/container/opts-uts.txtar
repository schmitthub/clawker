# Test UTS namespace flag (--uts)
# Verifies: UTS mode is set on the container

# Substitute project name in config
replace clawker.yaml PROJECT=$PROJECT

# Create settings directory
mkdir $HOME/.local/clawker

# Register cleanup
defer clawker container rm --force --agent uts-$RANDOM_STRING

# Create container with UTS host mode
exec clawker container create --agent uts-$RANDOM_STRING --uts host alpine:latest sleep 3600

# Verify UTS mode via inspect
exec clawker container inspect --format '{{.HostConfig.UTSMode}}' --agent uts-$RANDOM_STRING
stdout 'host'

-- clawker.yaml --
version: "1"
project: "$PROJECT"

build:
  image: "alpine:latest"

security:
  firewall:
    enable: false
