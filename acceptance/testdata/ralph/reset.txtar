# Test ralph reset command
# Verifies: reset command executes successfully even when no session exists

# Substitute project name in config
replace clawker.yaml PROJECT=$PROJECT

# Create settings directory
mkdir $HOME/.local/clawker

# Reset circuit breaker (should succeed even with no session)
exec clawker ralph reset --agent testdev
stderr 'Circuit breaker reset'

# Reset with --quiet flag (no output)
exec clawker ralph reset --agent testdev --quiet
! stderr 'Circuit breaker'

# Reset with --all flag
exec clawker ralph reset --agent testdev --all
stderr 'Circuit breaker reset'

-- clawker.yaml --
version: "1"
project: "$PROJECT"

build:
  image: "alpine:latest"

security:
  firewall:
    enable: false
