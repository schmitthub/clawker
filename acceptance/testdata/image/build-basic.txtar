# Test image build command
# Verifies: images can be built from project config

# Substitute project name in config
replace clawker.yaml PROJECT=$PROJECT

# Create settings directory
mkdir $HOME/.local/clawker

# Build with custom tag
exec clawker image build --tag test-img-build-$RANDOM_STRING:v1

# Register cleanup
defer clawker image rm test-img-build-$RANDOM_STRING:v1

# Verify image was created
exec clawker image ls
stdout 'test-img-build-'$RANDOM_STRING

# Build with no-cache flag (should succeed)
exec clawker image build --tag test-img-build-$RANDOM_STRING:v2 --no-cache

# Register cleanup for second tag
defer clawker image rm test-img-build-$RANDOM_STRING:v2

# Verify second image
exec clawker image ls
stdout 'test-img-build-'$RANDOM_STRING':v2'

-- clawker.yaml --
version: "1"
project: "$PROJECT"

build:
  image: "alpine:latest"

security:
  firewall:
    enable: false
