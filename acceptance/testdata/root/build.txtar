# Test image build command
# Verifies: clawker build creates an image

# Substitute project name in config
replace clawker.yaml PROJECT=$PROJECT

# Create settings directory
mkdir $HOME/.local/clawker

# Build the image
exec clawker build
stderr 'building container image'

# Defer cleanup - remove image after test
defer clawker image rm --force clawker-$PROJECT:latest

# Verify image exists in list
exec clawker image list
stdout 'clawker-'$PROJECT

-- clawker.yaml --
version: "1"
project: "$PROJECT"

build:
  image: "alpine:latest"

security:
  firewall:
    enable: false
